<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Takbuff" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorPrimary">@color/greyBright</item>
        <item name="colorPrimaryVariant">@color/greyLess</item>
        <!-- Secondary brand color. -->
        <item name="backgroundColor">@color/cream</item>
        <item name="colorSecondary">@color/whiteBright</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/banner</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Takbuff.Fullscreen" parent="Theme.Takbuff">
        <item name="android:actionBarStyle">@style/Widget.Theme.Takbuff.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Takbuff.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/banner</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>